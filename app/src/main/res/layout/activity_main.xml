<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/poohView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.128"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.66" />


    <TextView
        android:id="@+id/branchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30\n29\n28\n27\n26\n25\n24\n23\n22\n21\n20\n19\n18\n17\n16\n15\n14\n13\n12\n11\n10\n09\n08\n07\n06\n05\n04\n03\n02\n01\n00"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="74dp" />

    <Button
        android:id="@+id/rollButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll Dice"
        tools:layout_editor_absoluteX="249dp"
        tools:layout_editor_absoluteY="110dp" />

    <TextView
        android:id="@+id/roll1Display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="531dp" />

    <TextView
        android:id="@+id/roll2Display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="531dp" />

    <TextView
        android:id="@+id/dialogueDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll to climb!"
        tools:layout_editor_absoluteX="246dp"
        tools:layout_editor_absoluteY="248dp" />

    <Button
        android:id="@+id/restartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart"
        tools:layout_editor_absoluteX="213dp"
        tools:layout_editor_absoluteY="362dp" />

    <TextView
        android:id="@+id/rollsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rolls: 0"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="489dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
